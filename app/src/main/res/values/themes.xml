<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Porject" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PorjectNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#333333</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PorjectNoActionBarRed" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_toolbar</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textSize">13dp</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_toolbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@android:color/white</item> <!-- 用于非聚焦状态的图标颜色 -->
        <item name="colorControlActivated">@android:color/white</item> <!-- 用于聚焦状态的图标颜色 -->
        <item name="colorControlHighlight">@android:color/white</item> <!-- 用于按下时的图标颜色 -->
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PorjectNoActionBarGray" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_toolbar</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textSize">13dp</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_toolbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@android:color/white</item> <!-- 用于非聚焦状态的图标颜色 -->
        <item name="colorControlActivated">@android:color/white</item> <!-- 用于聚焦状态的图标颜色 -->
        <item name="colorControlHighlight">@android:color/white</item> <!-- 用于按下时的图标颜色 -->
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PorjectNoActionBarOrage" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textSize">14dp</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@android:color/white</item> <!-- 用于非聚焦状态的图标颜色 -->
        <item name="colorControlActivated">@android:color/white</item> <!-- 用于聚焦状态的图标颜色 -->
        <item name="colorControlHighlight">@android:color/white</item> <!-- 用于按下时的图标颜色 -->
        <!-- Customize your theme here. -->
    </style>
    <style name="CircleStyle" parent="">
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="footButton" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    <declare-styleable name="SwitchButton">
        <attr name="buttonColor" format="color" />
    </declare-styleable>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- 修改末尾图标的颜色 -->
        <item name="colorControlNormal">@android:color/white</item> <!-- 用于非聚焦状态的图标颜色 -->
        <item name="colorControlActivated">@android:color/white</item> <!-- 用于聚焦状态的图标颜色 -->
        <item name="colorControlHighlight">@android:color/white</item> <!-- 用于按下时的图标颜色 -->
    </style>
    <style name="CustomTextInputLayout_orage" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/orange</item> <!-- 红色边框 -->
        <item name="boxStrokeWidth">2dp</item> <!-- 边框宽度 -->
        <item name="boxBackgroundColor">@color/white</item> <!-- 白色背景 -->
        <item name="boxCornerRadiusTopStart">8dp</item> <!-- 上左圆角 -->
        <item name="boxCornerRadiusTopEnd">8dp</item> <!-- 上右圆角 -->
        <item name="boxCornerRadiusBottomStart">8dp</item> <!-- 下左圆角 -->
        <item name="boxCornerRadiusBottomEnd">8dp</item> <!-- 下右圆角 -->
    </style>

</resources>