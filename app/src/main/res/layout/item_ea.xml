<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
            android:id="@+id/responsibilityLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="认真负责"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:textColor=" #333333"
            android:textSize="15dp"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/fineWorkmanshipCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"

            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:text="做工精细"/>

    <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/seriousCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="166dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:textSize="13dp"
            android:text="认真"/>

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="50"
            android:gravity="center"
            android:layout_marginStart="230dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_gray_border"/>



    <TextView
        android:id="@+id/positionLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor=" #333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:text="职位-职务"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:text="0"
        android:textSize="13dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="85dp"
        android:text="25"
        android:textSize="13dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="145dp"
        android:text="50"
        android:textSize="13dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="195dp"
        android:text="75"
        android:textSize="13dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="245dp"
        android:text="100"
        android:textSize="13dp"
        />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/positionSeekBar"
        android:layout_width="230dp"
        android:layout_height="26dp"
        android:thumb="@drawable/normal_u7"
        android:progressDrawable="@drawable/seekbar_process"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
