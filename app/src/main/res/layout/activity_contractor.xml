<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background=" #f2f2f2"
    android:layout_height="match_parent"
    tools:context=".ui.login.RegisterContractorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/back"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写注册"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:layout_marginTop="3dp"
        >
        <TextView
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="选择自己公司名称"
            android:layout_marginStart="68dp"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <CheckBox
            android:id="@+id/ck_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建项目"
            android:layout_marginStart="249dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:id="@+id/ll_bottom"
        android:layout_marginTop="51dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:paddingEnd="10dp"
        >

        <TextView
            android:id="@+id/manage_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="管理员手机:"
            android:textSize="13sp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/ed_managephone"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"
            android:textSize="13dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/manage_phone"
            />
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写验证码:"
            android:textSize="13sp"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="@+id/manage_phone"
            app:layout_constraintTop_toBottomOf="@+id/manage_phone"
            />


        <EditText
            android:id="@+id/ed_code"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_code"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.xk.base.ui.XTextView
            android:id="@+id/tv_code_label"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:text="获取验证码"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"
            android:layout_marginStart="210dp"
            android:background="@drawable/rounded_red_border"
            android:textSize="13dp"
            android:textColor="#FF3300"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_cop"
        android:layout_marginTop="163dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_toolbar"
        android:layout_width="130dp"
        android:layout_height="31dp"
        android:src="@drawable/bt_competere"
        />

</androidx.constraintlayout.widget.ConstraintLayout>