<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 顶部工具栏，包含返回按钮和标题 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 滚动视图，包含各种设置项 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_toolbar"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="56dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <!-- 安全试题部分 -->
            <TextView
                android:id="@+id/tv_security_questions"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="安全试题"/>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_security_questions"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="5dp"/>

            <!-- 新消息提示部分 -->
            <TextView
                android:id="@+id/tv_new_message_notice"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:text="新消息提示"/>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_new_message_notice"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="15sp"/>

            <!-- 消息提示设置 -->
            <LinearLayout
                android:id="@+id/ll_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_notification_prompt"
                    android:layout_width="122dp"
                    android:layout_height="16dp"
                    android:text="消息提示"/>

                <com.xk.porject.base.SwitchButton
                    android:id="@+id/sw_notification_prompt"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="127dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"
                    />

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="15sp"/>

            <!-- 消息推送设置 -->
            <LinearLayout
                android:id="@+id/ll_push_notifications"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_push_notifications"
                    android:layout_width="122dp"
                    android:layout_height="16dp"
                    android:textSize="14dp"
                    android:text="消息推送"/>

                <com.xk.porject.base.SwitchButton
                    android:id="@+id/sw_push_notifications"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="127dp"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"/>
            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_before_push_notifications"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="15sp"/>

            <LinearLayout
                android:id="@+id/ll_push_notifications_container_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_push_notifications_label_1"
                    android:layout_width="122dp"
                    android:layout_height="16dp"
                    android:textSize="14dp"
                    android:text="发布的找工作"/>

                <com.xk.porject.base.SwitchButton
                    android:id="@+id/sw_enable_push_notifications_1"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="127dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"/>
            </LinearLayout>

            <View
                android:id="@+id/divider_after_push_notifications_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="15sp"/>

            <!-- 如果需要重复这个布局结构，记得更改ID来保持唯一性 -->
            <LinearLayout
                android:id="@+id/ll_push_notifications_container_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_push_notifications_label_2"
                    android:layout_width="122dp"
                    android:layout_height="16dp"
                    android:textSize="14dp"
                    android:text="发布的招聘"/>

                <com.xk.porject.base.SwitchButton
                    android:id="@+id/sw_enable_push_notifications_2"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="127dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"/>
            </LinearLayout>

            <View
                android:id="@+id/divider_after_push_notifications_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:background="@color/gray_lice"
                />
            <TextView
                android:id="@+id/tv_change_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="更换手机号"/>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textSize="14dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_ProgressReport"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="工程单"/>

            <!-- 分隔线 -->

            <!-- 分隔线 -->
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textSize="14dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="5dp"/>
            <!-- 修改密码 -->
            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="修改密码"/>

            <!-- 分隔线 -->
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textSize="14dp"
                android:background="@color/gray_lice"
                android:layout_marginTop="5dp"/>

            <!-- 工作卡设置 -->
            <TextView
                android:id="@+id/tv_work_card_settings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="工作卡设置"/>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_work_card_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

            <!-- 检测版本更新 -->
            <TextView
                android:id="@+id/tv_check_for_updates"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="检测版本更新"/>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_check_for_updates"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

            <!-- 意见反馈 -->
            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="意见反馈"/>

            <!-- 分隔线 -->
            <View
                android:id="@+id/divider_feedback"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

            <!-- 相关应用 -->
            <TextView
                android:id="@+id/tv_related_apps"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="相关应用"/>

            <!-- 分隔线 -->
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_Inbound"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:text="出入库"/>
            <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>


            <!-- 分隔线 -->

            <!-- 退出登录按钮 -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:textSize="14dp"
                android:text="切换退出账号"
                android:layout_marginBottom="70dp"
                android:textColor="@color/orange"
                android:background="@drawable/rounded_red_border"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
