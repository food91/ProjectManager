<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- 主内容区 -->
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:text="项目列表"
                    android:layout_marginTop="10dp"
                    />
                <View
                    android:layout_width="1dp"
                    android:background="@color/gray"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="9dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <!-- 搜索栏 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="10dp"
            android:padding="8dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
            android:hint="搜索"
            android:paddingStart="8dp"
            android:paddingEnd="48dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="36dp"
              android:background="@color/gray"
               />
            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_search_category_default" />
        </FrameLayout>


    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="20dp"
        android:layout_marginStart="7dp"
                android:text="风电项目" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginStart="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光伏项目"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="7dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办公楼项目"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="7dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginStart="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公路项目"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="7dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginStart="7dp"
                />
            <com.xk.base.ui.XTextView
                android:id="@+id/bt_addproject"
                android:layout_width="154dp"
                android:layout_height="31dp"
                android:text="+ 添加项目"
                android:gravity="center"
                android:textColor="@color/orange"
                android:layout_gravity="center"
                android:background="@drawable/rect3"
                android:layout_marginTop="22dp"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="180dp"
        android:background="#607d8b"
        android:gravity="center_vertical"
        >
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:src="@drawable/arrow_start"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收起"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"

        />
    </LinearLayout>
    <View
        android:id="@+id/div"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        />
        <LinearLayout
            android:id="@+id/ll_top_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ll_top"
            android:background="@color/white"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
            <com.xk.base.ui.XTextView
                android:id="@+id/bt_contractor"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:text="+ 添加项目承包"
                android:gravity="center"
                android:textColor="@color/orange"
                android:layout_gravity="center"
                android:background="@drawable/rect3"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
