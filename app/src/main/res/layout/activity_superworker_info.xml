<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.WorkerInfoActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 返回图标 -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="职员信息"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"
          />
        <TextView
            android:id="@+id/tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员"
            android:textSize="13dp"
            android:textColor="#666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="201dp"
            android:padding="2dp"
            />
        <com.xk.porject.base.SwitchButton
            android:id="@+id/sw"
            android:layout_width="59dp"
            android:layout_height="39dp"
            android:layout_marginStart="227dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <TextView
            android:id="@+id/tv_m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机械"
            android:textSize="13dp"
            android:textColor="#666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="286dp"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/clToolbar"
        android:paddingBottom="60dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
       >
        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
        android:id="@+id/iv_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/work1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="职务/工种*："/>
            <EditText
                android:id="@+id/ed_work_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="姓名*："/>
            <EditText
                android:id="@+id/ed_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="性别："/>
            <EditText
                android:id="@+id/ed_sex"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="民族："/>
            <EditText
                android:id="@+id/ed_nation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="年龄："/>
            <EditText
                android:id="@+id/ed_age"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:text="身份证号："/>
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                >
            <EditText
                android:id="@+id/ed_ident"
                android:layout_width="200dp"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_type_money"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_border"
             />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="元/"
                />
            <EditText
                android:id="@+id/ed_type_day"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:background="@drawable/rounded_gray_border"
                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_type_time"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_border"
                android:layout_marginStart="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_type_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_type_count_money"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_border"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="元/"
                />
            <EditText
                android:id="@+id/ed_type_count_count"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_border"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:text="单位"
                />
            <EditText
                android:id="@+id/ed_type_count_name"
                android:layout_width="35dp"
                android:layout_marginStart="13dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_border"
                />
        </LinearLayout>
        <Spinner
            android:id="@+id/spinner_recordtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
        </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="银行账号*："/>
            <EditText
                android:id="@+id/ed_bankAccountNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="开户行*："/>
            <EditText
                android:id="@+id/ed_bankDeposit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="入职时间："/>
            <Spinner
                android:id="@+id/spinner_year"
                android:layout_width="70dp"
                android:background="@drawable/rounded_gray_border"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinner_mon"
                android:layout_width="50dp"
                android:background="@drawable/rounded_gray_border"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinner_day"
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_gray_border"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="账号/手机号*："/>
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="密码*："/>
            <EditText
                android:id="@+id/ed_pw"
                android:layout_width="214dp"
                android:layout_height="27dp"
                app:cornerRadius = "5dp"
                android:padding="2dp"
                android:layout_gravity="bottom"
                android:textColor="#333333"
                android:gravity="center"
                />
        </LinearLayout>

        <com.xk.base.ui.XTextView
            android:id="@+id/tv_addworker"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="提 交"
            app:cornerRadius = "5dp"
            android:textColor="@color/orange"
            android:layout_marginTop="34dp"
            android:background="@drawable/rounded_red_border"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="60dp"
            />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>