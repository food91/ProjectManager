<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ChatActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/yellow"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="与XXX用户的聊天"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                />
            <TextView
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:text="@string/chat1"
                android:paddingTop="5dp"
                android:paddingEnd="7dp"
                android:paddingBottom="12dp"
                android:paddingStart="12dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="18dp"
                android:textSize="13dp"
                android:background="@drawable/rounded_gray_border"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/chat2"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:text="@string/chat1"
                android:paddingTop="5dp"
                android:paddingEnd="7dp"
                android:paddingBottom="12dp"
                android:paddingStart="12dp"
                android:layout_marginStart="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18dp"
                android:textSize="13dp"
                android:background="@drawable/rounded_gray_border"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                />
            <TextView
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:text="@string/chat2"
                android:paddingTop="5dp"
                android:paddingEnd="7dp"
                android:paddingBottom="12dp"
                android:paddingStart="12dp"
                android:layout_marginStart="11dp"

                android:textSize="13dp"
                android:background="@drawable/rounded_gray_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="11dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="9dp"
                android:background="@drawable/rounded_gray_border"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/voice"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33″"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person1"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="11dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="9dp"
                android:background="@drawable/rounded_gray_border"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/voice"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60″"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_gray_border"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="9dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chat3"
            />
        <ImageView
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:src="@drawable/chapt4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="281dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/chapt5"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>