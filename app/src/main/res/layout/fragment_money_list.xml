<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 顶部表格标题栏容器 -->
    <LinearLayout
        android:id="@+id/llTableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF"
        android:padding="8dp"
        android:paddingStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 月份列标题 -->
        <TextView
            android:id="@+id/tvMonthHeader"
            android:layout_width="66dp"

            android:layout_height="wrap_content"
            android:text="月份"
            android:gravity="center" />

        <!-- 工程款列标题 -->
        <TextView
            android:id="@+id/tvProjectFundsHeader"
            android:layout_width="66dp"

            android:layout_height="wrap_content"
            android:text="工程款"
            android:gravity="center" />

        <!-- 人民工资列标题 -->
        <TextView
            android:id="@+id/tvSalaryHeader"
            android:layout_width="66dp"

            android:layout_height="wrap_content"
            android:text="人民工资"
            android:gravity="center" />

        <!-- 代教费列标题 -->
        <TextView
            android:id="@+id/tvSubstituteFeeHeader"
            android:layout_width="66dp"

            android:layout_height="wrap_content"
            android:text="代教费"
            android:gravity="center" />

        <!-- 结欠列标题 -->
        <TextView
            android:id="@+id/tvDebtHeader"
            android:layout_width="66dp"

            android:layout_height="wrap_content"
            android:text="结欠"
            android:gravity="center" />

        <!-- 填写/合集列标题 -->
        <TextView
            android:id="@+id/tvEntryCollectionHeader"
            android:layout_width="66dp"

            android:layout_height="wrap_content"
            android:text="填写/合集"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
