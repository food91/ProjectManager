<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.MyCenterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/yellow"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            />
        <com.xk.base.ui.XTextView
            android:id="@+id/bt_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btcommit"
            app:cornerRadius="9dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:text="提材料"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="66dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginStart="14dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="状态:工作中"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/image"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="点击修改"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="综合分:68\n技能分:88\n管理分:0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvUnitLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="所在单位:"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内蒙古金兴机械 涡轮生产设计项目 项目土建部/新建子分组"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 职务/工种 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvPositionLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="职务/工种"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="木工"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 编号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvIdLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="编号:"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00000259"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="王岐山"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 性别 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvGenderLabel"
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="性别"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="男"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 身份证 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvIdCardLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="身份证"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvIdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="152530197806251354"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 籍贯 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvBirthplaceLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="籍贯"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvBirthplace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="山西大同王家寨"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 民族 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvEthnicityLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="民族"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvEthnicity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="回族"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 年龄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvAgeLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="年龄"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="45岁（1978.6.25）"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 工资 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvSalaryLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="工资"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3000 元/月"
             />
            <com.xk.base.ui.XTextView
                android:id="@+id/tv_borrow"
                android:layout_width="62dp"
                android:layout_height="24dp"
                app:cornerRadius="5dp"
                android:background="#1e98d7"
                android:textColor="@color/white"
                android:text="借支"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_marginEnd="31dp"
                />
        </LinearLayout>

        <!-- 银行账号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvBankAccountLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="银行账号"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvBankAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工商 62202061002101232122"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 入职时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvStartDateLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="入职时间"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2016-06-12"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 工资剩余 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvRemainingSalaryLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="工资剩余"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvRemainingSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23000 元"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 共计领取 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTotalReceivedLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="共计领取"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvTotalReceived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="125630 元"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 账号/手机号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvAccountPhoneLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:text="账号/手机号"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvAccountPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15656562563"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <!-- 密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvPasswordLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*************"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <com.xk.base.ui.XTextView
                android:id="@+id/tv_showpw"
                android:text="显示密码"
                android:textSize="11dp"
                android:background="@drawable/rounded_red_border"
                android:layout_width="80dp"
                android:layout_height="30dp"
                app:cornerRadius="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textColor="#ff3300"
                />
        </LinearLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的劳务合同阅读尾部并确认"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:checked="true"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全教育已经阅读并确认"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:checked="true"
            />
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>