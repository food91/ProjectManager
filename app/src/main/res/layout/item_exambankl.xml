<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvQuestionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="这里是测试题名称"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.xk.base.ui.XTextView
            android:id="@+id/tvEdit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_red_border"
            android:text="编辑"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQuestionName"/>

        <com.xk.base.ui.XTextView
            android:id="@+id/tvPublish"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:textSize="14dp"
            android:gravity="center"
            android:background="#ff6600"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="发布"
            app:layout_constraintStart_toEndOf="@id/tvEdit"
            app:layout_constraintTop_toBottomOf="@id/tvQuestionName"/>

        <com.xk.base.ui.XTextView
            android:id="@+id/tvDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="草稿"
            app:layout_constraintStart_toEndOf="@id/tvPublish"
            app:layout_constraintTop_toTopOf="@+id/tvQuestionName"/>

        <com.xk.base.ui.XTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="2016-05-26"
            app:layout_constraintStart_toEndOf="@id/tvPublish"
         app:layout_constraintBottom_toBottomOf="@id/tvPublish"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerOption1"
            android:layout_width="76dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="234dp"
            android:layout_marginTop="19dp"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerOption2"
            android:layout_width="76dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="314dp"
            android:layout_marginTop="19dp"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerOption3"
            android:layout_width="76dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="234dp"
            android:layout_marginTop="44dp"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerOption4"
            android:layout_width="76dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="314dp"
            android:layout_marginTop="44dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>