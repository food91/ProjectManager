<?xml version="1.0" encoding="utf-8"?>
<com.xk.base.ui.SwipeToDeleteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="2dp"
            />

        <TextView
            android:id="@+id/tvQuestionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="这里是测试题名称"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            />

        <com.xk.base.ui.XTextView
            android:id="@+id/tvEdit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            app:cornerRadius ="5dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_red_border"
            android:text="编辑"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.xk.base.ui.XTextView
            android:id="@+id/tvPublish"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:gravity="center"
            app:cornerRadius ="5dp"
            android:background="#ff6600"
            android:textColor="@color/white"
            android:layout_marginStart="85dp"
            android:layout_marginTop="40dp"
            android:text="发布"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />

        <com.xk.base.ui.XTextView
            android:id="@+id/tvDraft"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="草稿"
            android:textColor="#ff0000"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="164dp"
            android:layout_marginTop="34dp"
            />

        <com.xk.base.ui.XTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="157dp"
            android:text="2016-05-26"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            />

        <com.xk.base.ui.spinner.NiceSpinner
            android:id="@+id/spinnerOption1"
            android:layout_width="90dp"
            android:layout_height="23dp"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="234dp"
            android:layout_marginTop="19dp"
            />
        <com.xk.base.ui.spinner.NiceSpinner
            android:id="@+id/spinnerOption3"
            android:layout_width="90dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="234dp"
            android:layout_marginTop="44dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <com.xk.base.ui.spinner.NiceSpinner
            android:id="@+id/spinnerOption2"
            android:layout_width="90dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="19dp"
            />
        <com.xk.base.ui.spinner.NiceSpinner
        android:id="@+id/spinnerOption4"
            android:layout_width="90dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.xk.base.ui.SwipeToDeleteLayout>