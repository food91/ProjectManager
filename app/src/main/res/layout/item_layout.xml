<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="8dp">

    <LinearLayout
        android:id="@+id/llMid_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvWinningUnit"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="中标单位："
                android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextWinningUnit"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvLot"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="标段:"
                android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextLot"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvWinningPrice"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="中标价："
                android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextWinningPrice"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPhone"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>