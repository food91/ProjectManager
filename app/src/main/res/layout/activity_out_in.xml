<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.OutInActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出入库"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        >
        <TextView
            android:id="@+id/text_view_purchase_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采购入库单"
            android:padding="16dp"
            android:textSize="14dp"
            />
        <View
            android:id="@+id/divider_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <TextView
            android:id="@+id/text_view_outbound_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出库单"
            android:padding="16dp"
            android:textSize="14dp"
            />
        <View
            android:id="@+id/divider_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <TextView
            android:id="@+id/text_view_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="库存"
            android:padding="16dp"
            android:textSize="14dp"
            />
        <View
            android:id="@+id/divider_line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <TextView
            android:id="@+id/text_view_return_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退库"
            android:padding="16dp"
            android:textSize="14dp"
            />
        <View
            android:id="@+id/divider_line_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <TextView
            android:id="@+id/text_view_material_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="材料配比"
            android:padding="16dp"
            android:textSize="14dp"
            />
        <View
            android:id="@+id/divider_line_5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        <TextView
            android:id="@+id/text_view_statistical_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="统计报表"
            android:padding="16dp"
            android:textSize="14dp"
            />
        <View
            android:id="@+id/divider_line_6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>