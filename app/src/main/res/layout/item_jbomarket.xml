<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/iv_head"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/chat2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="21dp"
    android:layout_marginTop="18sp"
    />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王立新"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="109dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:id="@+id/tv_native"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="籍贯：甘肃天水，当前在：内蒙古锡林郭勒盟"
        android:textSize="13dp"
        android:textColor=" #666666"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="165dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:id="@+id/tv_state_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前状态:   在职"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="109dp"
        android:layout_marginTop="44dp"
        />
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12天后空闲"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="210dp"
        android:layout_marginTop="44dp"
        />
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特长：钢结构、焊接、模板"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="109dp"
        android:layout_marginTop="64dp"
        />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综合分:    87 分，不良记录：喝酒、讨薪 。更多..."
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="109dp"
        android:layout_marginTop="83dp"
        />
    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/job_mark"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        app:layout_constraintEnd_toEndOf="@+id/iv_head"
        />
</androidx.constraintlayout.widget.ConstraintLayout>