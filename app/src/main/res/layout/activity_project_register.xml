<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.login.ProjectRegisterActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#F2F2F2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbarConstraintLayout"
            android:background="@color/white"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写注册"
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llTop"
            android:background="@color/white"
            android:layout_marginTop="13dp"
            android:paddingStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/toolbarConstraintLayout"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCompanyName"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:text="公司名称:"

                        android:textSize="13dp"
                        />
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"

                        android:textSize="13dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvProjectName"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="项目名称:"
                    android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="13dp"

                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMid"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:layout_marginTop="13dp"
            android:paddingStart="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/llTop"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/llMid_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvWinningUnit"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="中标单位："
                    android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextWinningUnit"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvLot"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="标段:"
                    android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextLot"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvWinningPrice"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="中标价："
                    android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextWinningPrice"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:textSize="13dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPhone"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            </LinearLayout>
            <com.xk.base.ui.XTextView
                android:id="@+id/btAdd"
                android:layout_width="70dp"
                android:gravity="center"
                android:padding="2dp"
                android:layout_height="22dp"
                android:text="增加一组"
                app:cornerRadius ="5dp"
                android:textColor="@color/white"
                android:background="#0d12e2"
                android:layout_marginTop="13dp"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llBottom"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:layout_constraintTop_toBottomOf="@+id/llMid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">



                <TextView
                    android:id="@+id/tvManagePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="管理员手机:"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edManagePhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@id/tvManagePhone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvManagePhone" />


                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填写验证码:"
                   android:layout_marginTop="52dp"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edManagePhone"
                    app:layout_constraintBaseline_toBaselineOf="@+id/edCode"/>

                <!-- 验证码输入框 -->
                <EditText
                    android:id="@+id/edCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="52dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="9dp"
                    />

                <!-- 获取验证码的 TextView -->
                <TextView
                    android:id="@+id/tvGetCode"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textSize="13dp"
                    android:textColor="#FF3300"
                    android:padding="2dp"
                    android:background="@drawable/rounded_red_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="13dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivSubmit"
            app:layout_constraintTop_toBottomOf="@id/llBottom"
            app:layout_constraintStart_toStartOf="@id/toolbarConstraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="130dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="51dp"
            android:layout_height="35dp"
            android:src="@drawable/bt_competere"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>