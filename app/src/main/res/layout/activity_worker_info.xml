<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contractor.WorkerInfoActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 返回图标 -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="职员信息"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"
          />
        <TextView
            android:id="@+id/tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员"
            android:textSize="13dp"
            android:textColor="#666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="201dp"
            android:padding="2dp"
            />
        <com.xk.porject.base.SwitchButton
            android:id="@+id/sw"
            android:layout_width="59dp"
            android:layout_height="39dp"
            android:layout_marginStart="227dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <TextView
            android:id="@+id/tv_m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机械"
            android:textSize="13dp"
            android:textColor="#666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="286dp"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/clToolbar"
        android:paddingBottom="60dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
       >
        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
        android:id="@+id/iv_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/work1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="选择分组*："/>
            <TextView
                android:id="@+id/tv_choose_grounp"
                android:layout_width="200dp"
                android:layout_height="31dp"
                android:layout_marginStart="26dp"
                android:background="@drawable/rounded_gray_border"
                android:text="请选择"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="职务/工种*："/>
            <EditText
                android:id="@+id/ed_work_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="姓名*："/>
            <EditText
                android:id="@+id/ed_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="性别："/>
            <EditText
                android:id="@+id/ed_sex"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="籍贯："/>
            <EditText
                android:id="@+id/ed_home"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="民族："/>
            <EditText
                android:id="@+id/ed_nation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="年龄："/>
            <EditText
                android:id="@+id/ed_age"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="身份证号："/>
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="31dp"
                android:padding="2dp"
                >
            <EditText
                android:id="@+id/ed_ident"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
                <com.xk.porject.ui.custom.XTextView
                    android:text="信誉查询"
                    android:background="#ff0000"
                    app:cornerRadius = "5dp"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|bottom"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="工资*："/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_gray_border"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_type_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_type_money"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
             />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="元/"
                />
            <EditText
                android:id="@+id/ed_type_day"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:background="@drawable/edittext_border"
                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_type_time"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_type_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_type_count_money"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="元/"
                />
            <EditText
                android:id="@+id/ed_type_count_count"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:text="单位"
                />
            <EditText
                android:id="@+id/ed_type_count_name"
                android:layout_width="35dp"
                android:layout_marginStart="13dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="银行账号*："/>
            <EditText
                android:id="@+id/ed_bankAccountNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="开户行*："/>
            <EditText
                android:id="@+id/ed_bankDeposit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="入职时间："/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_year"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_mon"
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_day"
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_check_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="自动位置签到 退"
               />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_check_in"
                android:layout_width="wrap_content"
                android:text="手动签到 退"
                android:layout_marginStart="34dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="账号/手机号*："/>
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="密码*："/>
            <com.xk.base.ui.XTextView
                android:layout_width="214dp"
                android:layout_height="27dp"
                app:cornerRadius = "5dp"
                android:padding="2dp"
                android:textColor="#333333"
                android:background="@drawable/rounded_gray_border"
                android:gravity="center"
                android:text="发送到手机"
                />
        </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox_unexpected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="意外险       2323年1月1日-2302年2月2日"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="已体检       2323年1月1日-2302年2月2日"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="34dp"
                android:background="#1e98d7"
                android:textSize="13dp"
                android:layout_marginStart="11dp"
                android:gravity="center"
                android:text="该员工综合分：85分"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="140dp"
                android:layout_height="34dp"
                android:padding="2dp"
                android:textSize="13dp"
                android:background="#e88721"
                android:gravity="center"
                android:layout_marginStart="9dp"
                android:text="查看该员工历史评定详情"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兼职"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为收料员"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为发料员"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为记工员"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为收料员"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为发料员"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为记工员"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为收料员"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为发料员"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设为记工员"/>
        </LinearLayout>

        <com.xk.base.ui.XTextView
            android:id="@+id/tv_addworker"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="保   存"
            app:cornerRadius = "5dp"
            android:textColor="@color/orange"
            android:layout_marginTop="34dp"
            android:background="@drawable/rounded_red_border"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="60dp"
            />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>