<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ChangePWActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginStart="5dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="14dp"
            android:textColor="@color/toobartext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员列表 >>"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:textSize="14dp"
            android:text="当前密码"/>


            <EditText
                android:id="@+id/ed_old_pw"
                android:layout_marginTop="10dp"
                android:layout_width="295dp"
                android:layout_height="34dp"
                android:paddingStart="5dp"
                android:background="@drawable/edittext_border_red"
                android:layout_marginStart="25dp"
               />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="10dp"
            android:textSize="14dp"
            android:text="新密码"/>

            <EditText
                android:id="@+id/ed_new_pw"
                android:layout_marginTop="10dp"
                android:layout_width="295dp"
                android:layout_height="34dp"
                android:paddingStart="5dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/edittext_border_red"

             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginStart="10dp"
            android:textSize="14dp"
            android:text="重新输入新密码"/>


            <EditText
                android:id="@+id/ed_new_pw2"
                android:layout_marginTop="10dp"
                android:layout_width="295dp"
                android:layout_height="34dp"
                android:paddingStart="5dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/edittext_border_red"
            />




        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:background="@drawable/rounded_red_border"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#ff6600"
            android:text="确认"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>