<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@android:color/holo_red_light"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="337dp"
        android:src="@drawable/login"
        />


        <TextView
            android:id="@+id/tv_title"
            android:text="施工人员管理 · 管理员端口"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="243dp"
            android:layout_marginBottom="304dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textColor="#ff3300"
            android:background="@color/white"
            />

    <EditText
        android:id="@+id/ed_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:textSize="13sp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:hint="请输入登陆手机号"
        android:background="@drawable/edittext_border"/>
    <LinearLayout
        android:id="@+id/ed_ps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/ed_user"
        app:layout_constraintTop_toBottomOf="@+id/ed_user"
        app:layout_constraintStart_toStartOf="@+id/ed_user"
        android:layout_marginTop="10dp"
        >
    <EditText
        android:id="@+id/ed_loginps"
        app:layout_constraintTop_toBottomOf="@+id/ed_user"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:textSize="13sp"

        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingStart="24dp"
        android:inputType="textPassword"
        android:background="@drawable/edittext_border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_marginStart="11sp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:textColor="@color/orange"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/bt_login"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/ed_ps"
        app:layout_constraintEnd_toEndOf="@+id/ed_user"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="129dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview_background"
        android:text="登陆"
        />


</androidx.constraintlayout.widget.ConstraintLayout>