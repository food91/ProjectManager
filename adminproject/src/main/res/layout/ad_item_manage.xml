<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/projectConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/projectLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/projectTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="内蒙古新风风电项目--项目经理"
        app:layout_constraintStart_toEndOf="@id/projectLabelTextView"
        app:layout_constraintTop_toTopOf="@id/projectLabelTextView"
        android:layout_marginStart="5dp"
     />

    <TextView
        android:id="@+id/projectManagerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李小沫"
        app:layout_constraintStart_toStartOf="@id/projectLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/projectLabelTextView"/>

    <TextView
        android:id="@+id/managerContactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15656356326"
        app:layout_constraintStart_toStartOf="@id/projectManagerNameTextView"
        app:layout_constraintTop_toBottomOf="@id/projectManagerNameTextView"/>

    <TextView
        android:id="@+id/deleteButtonTextView"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:text="删除"
        android:background="@drawable/rounded_red_border"
        android:textColor="@color/orange"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
