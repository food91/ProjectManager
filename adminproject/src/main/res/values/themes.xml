<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AdminProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set the status bar to be translucent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Ensure the status bar icons are dark for visibility against a light status bar -->
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="Theme.AdminProject" parent="Base.Theme.AdminProject" >
        <item name="android:textAppearance">@style/MyApp.TextAppearance</item>
    </style>
    <style name="MyApp.TextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">13dp</item>
    </style>
    <style name="Theme.AdminProjectGreen" parent="Base.Theme.AdminProject" >
        <item name="android:statusBarColor">@color/green</item>
    </style>
</resources>